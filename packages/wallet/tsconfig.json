{
  "extends": "@cubik/config/tsconfig/react-library.json",
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "jsx": "react",
    "declaration": true,
    "sourceMap": true,
    "allowJs": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "removeComments": true,
    "moduleResolution": "node",
    "lib": ["dom", "es2015", "es2017.object"],
    "baseUrl": ".",
    "resolveJsonModule": true
  },
  "include": ["src/**/*.ts*"],
  "exclude": ["node_modules", "dist", "lib"]
}
